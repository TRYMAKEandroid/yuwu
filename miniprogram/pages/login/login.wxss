.main{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 750rpx;
}
/* 用户头像 */
  .main>.user_img{
    width: 200rpx;
    height: 200rpx;
    border: 1rpx solid #666;
    border-radius: 50%;
    margin:200rpx 275rpx 200rpx 275rpx;
  }
  .main>.user_img>image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }
/* 获取用户信息内容 */
  .main>.user_content{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 100rpx;
    text-align: left;
  }
  .main>.user_content>view{
    font-weight: 600;
    border-bottom: 1rpx solid black;
    margin-bottom:15rpx;
  }
  .main>.user_content>text{
    color:#666;
    font-size: 30rpx;
  }

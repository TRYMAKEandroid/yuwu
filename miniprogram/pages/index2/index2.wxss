/* pages/index2/index2.wxss */
.main{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}
/* 轮播图 */
.lbt{
  width: 750rpx;
  height: 350rpx;
}
 .lbt>swiper{
   width:100%;
   height:100%;
 }
 .lbt>swiper>swiper-item{
   width:100%;
   height: 100%;
 }
 .lbt>swiper>swiper-item>navigator{
   width: 100%;
   height: 100%;
 }
 .lbt>swiper>swiper-item>navigator>image{
   width: 750rpx;
   height:100%;
 }
 /* 搜索框 */
 .search{
   position: absolute;
   top:40rpx;
   left: 125rpx;
 }
  .search>input{
    width: 500rpx;
    background: white;
    border-radius: 10rpx;
    text-align: center;
  }
  /* 商品列表 */
.goods_list{
  width: 750rpx;
  background: whitesmoke;
}
  .goods_list>.goods_container{
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content:start; 
    padding: 5%;
    
  }
  .goods_list>.goods_container>navigator:nth-child(2n),.goods_list>.goods_container>navigator:nth-child(2n+1){
    width: 45%;
    height: 420rpx;
    display: flex;
    flex-direction: column;
    border:1rpx solid rgba(66,66,66,0.3);
    margin-top:5%;
    justify-content: space-between;
  }
  .goods_list>.goods_container>navigator:nth-child(2n){ /*右边的navigator*/
    margin-left: 5%
  }
  .goods_list>.goods_container>navigator:nth-child(2n+1){ /*右边的navigator*/
    margin-right: 5%
  }
  
  
    .goods_list>.goods_container>navigator>.goods_image{
      width: 100%;
      height: 300rpx;
      border-bottom:1rpx solid black;
    }
      .goods_list>.goods_container>navigator>.goods_image>image{
        width: 100%;
        height: 300rpx;
      }
    .goods_list>.goods_container>navigator>.goods_title{
      width: 100%;
      /* text-align: center; */
      font-size:30rpx;
      overflow:hidden;
      text-overflow: ellipsis;
      word-wrap: break-word;
      display: -webkit-box;
      -webkit-box-orient: vertical; 
      -webkit-line-clamp:2;
      
    }
      /* .goods_list>.goods_container>navigator>.goods_title>text{} */
    .goods_list>.goods_container>navigator>.goods_price{
      font-size:35rpx;
      font-weight: 600;
      text-align: center;
      color: red
    }
